<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/item_giohang_image"
            android:scaleType="centerCrop"
            android:src="@drawable/iconnew_h512"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="110dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/item_giohang_tensp"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:text="Tên sản phẩm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:weightSum="14"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="7"
                    android:id="@+id/item_giohang_gia"
                    android:text="15000"
                    android:textSize="14dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#716C6C"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <ImageView

                    android:src="@drawable/baseline_remove_24"
                    android:id="@+id/item_giohang_tru"
                    android:background="@drawable/background_border"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/item_giohang_soluong"
                    android:text="1"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/item_giohang_cong"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/background_border"
                    android:src="@drawable/baseline_add_24" />

                <!--                <ImageView-->
<!--                    android:layout_weight="1"-->
<!--                    android:src="@drawable/baseline_drag_handle_24"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="wrap_content"/>-->

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/item_giohang_giasp2"
                    android:text="25000 VNĐ"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="1dp"
                    android:gravity="center|center_vertical"
                    android:layout_weight="7"
                    android:textColor="@android:color/holo_red_light"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>